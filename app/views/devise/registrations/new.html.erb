<div class="w3-container w3-display-middle w3-center w3-border" style="width:25%">
  <div class="w3-container w3-blue">
  <h2>Cadastre-se</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


  <div class="field">
    <%= f.label :email, class: "w3-text-blue" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w3-border w3-light-grey" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "w3-text-blue" %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w3-border w3-light-grey" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "w3-text-blue" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w3-border w3-light-grey"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class: "w3-btn"%>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>